	pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_usb2ad_default>;
};

&video {
	status = "okay";
	memory-region = <&video_engine_memory>;
};

&kcs1 {
        kcs-io-addr = <0xca0>;
	kcs-channel = <1>;
        status = "okay";

};
*/

&lpc_ctrl {
	status = "okay";
};

&lpc_pcc {
        port-addr = <0x80>;
        dma-mode;
	// It is required to be 4 bytes mode when A2600-15 is activated.
        A2600-15;
        memory-region = <&pcc_memory>;
        rec-mode = <0x1>;
        port-addr-hbits-select = <0x1>;
        port-addr-xbits = <0x3>;

        status = "okay";
};

&fsim0 {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&uhci {
	status = "okay";

&pwm_tach {
        status = "okay";
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_pwm0_default &pinctrl_pwm1_default
                     &pinctrl_pwm2_default &pinctrl_pwm3_default
                     &pinctrl_pwm4_default &pinctrl_pwm5_default
                     &pinctrl_pwm6_default &pinctrl_pwm7_default
                     &pinctrl_tach0_default &pinctrl_tach1_default
                     &pinctrl_tach2_default &pinctrl_tach3_default
                     &pinctrl_tach4_default &pinctrl_tach5_default
                     &pinctrl_tach6_default &pinctrl_tach7_default
                     &pinctrl_tach8_default &pinctrl_tach9_default
                     &pinctrl_tach10_default &pinctrl_tach11_default
                     &pinctrl_tach12_default &pinctrl_tach13_default
                    >;

        fan@0 {
                tach-ch = /bits/ 8 <0x00>;
        };
        fan@1 {
                tach-ch = /bits/ 8 <0x01>;
        };
        fan@2 {
                tach-ch = /bits/ 8 <0x02>;
        };
        fan@3 {
                tach-ch = /bits/ 8 <0x03>;
        };
        fan@4 {
                tach-ch = /bits/ 8 <0x04>;
        };
        fan@5 {
                tach-ch = /bits/ 8 <0x05>;
        };
        fan@6 {
                tach-ch = /bits/ 8 <0x06>;
        };
        fan@7 {
                tach-ch = /bits/ 8 <0x07>;
        };
        fan@8 {
                tach-ch = /bits/ 8 <0x08>;
        };
        fan@9 {
                tach-ch = /bits/ 8 <0x09>;
        };
        fan@10 {
                tach-ch = /bits/ 8 <0x0A>;
        };
        fan@11 {
                tach-ch = /bits/ 8 <0x0B>;
        };
        fan@12 {
                tach-ch = /bits/ 8 <0x0C>;
        };
};

